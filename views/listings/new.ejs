<% layout('/layouts/boilerplate') -%>
<body>
    <h3>CREAGTE DATA</h3>
    <form action="/listing" method="post">
        <label for="title">Title</label>
        <input type="text" id="title" name="data[title]">
        <br>
        <br>
        <label for="description">Description</label>
        <br>
        <textarea name="data[description]" id="description" cols="30" rows="10"></textarea>
        <br>
        <br>
        <label for="image">Image</label>
        <input type="text" id="image" name="data[image]">
        <br>
        <br>
        <label for="price">Price</label>
        <input type="number" id="price" name="data[price]">
        <br>
        <br>
        <label for="location">Location</label>
        <input type="text" id="location" name="data[location]">
        <br>
        <br>
        <label for="country">Country</label>
        <input type="text" id="country" name="data[country]">
        <br>
        <br>
        <button type="submit">CREATE</button>
    </form>
    <form action="/listing" method="get">
        <button>HOME</button>
    </form>
</body>