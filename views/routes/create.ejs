<% layout('layouts/boilerplate') -%>

  <body>
    <section class="form-section">
      <div class="container">
        <div class="form-container shadow rounded p-4 bg-white mx-auto">
          <h2 class="text-center mb-4">Post a Travel Place</h2>

          <!-- POST FORM -->
          <form action="/stayfinder" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Place Title</label>
              <input type="text" class="form-control" id="title" name="listing[title]" placeholder="e.g. Eiffel Tower"
                required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea class="form-control" id="description" name="listing[description]" rows="4"
                placeholder="Describe the place..." required></textarea>
            </div>

            <div class="mb-3">
              <label for="image" class="form-label">Image URL</label>
              <input type="url" class="form-control" id="image" name="listing[image]"
                placeholder="https://example.com/image.jpg">
            </div>

            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input type="number" class="form-control" id="price" name="listing[price]" placeholder="e.g. 199"
                required>
            </div>

            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" class="form-control" id="location" name="listing[location]" placeholder="e.g. Paris"
                required>
            </div>

            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input type="text" class="form-control" id="country" name="listing[country]" placeholder="e.g. France"
                required>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          <!-- GET FORM: HOME -->
          <form action="/stayfinder" method="get" class="mt-3">
            <button type="submit" class="btn btn-secondary">Home</button>
          </form>
        </div>
      </div>
    </section>
  </body>