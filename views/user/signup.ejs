<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mb-5 mt-3">
            <div class="col-6 offset-3">
                <div class="col-2 offset-5"><h3><strong>SIGNUP</strong></h3></div>
                <form action="/signup" method="post" novalidate class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">USERNAME</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                        <div class="invalid-feedback">
                            &#9746; PLEASE ENTER THE TITLE
                        </div>
                        <div class="valid-feedback">
                            &#9746; Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">EMAIL</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                        <div class="invalid-feedback">
                            &#9746; PLEASE ENTER THE EMAIL
                        </div>
                        <div class="valid-feedback">
                            &#9746; Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">PASSWORD</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                        <div class="invalid-feedback">
                            &#9746; PLEASE ENTER THE PASSWORD
                        </div>
                        <div class="valid-feedback">
                            &#9746; Looks good!
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark add-btn col-2 offset-5">SIGNUP</button>
                </form>
            </div>
        </div>
    </body>