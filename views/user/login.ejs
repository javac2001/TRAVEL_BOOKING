<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mb-5 mt-3">
            <div class="col-6 offset-3">
                <div class="col-2 offset-5"><h3><strong>LOGIN</strong></h3></div>
                <form action="/login" method="post" novalidate class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">USERNAME</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">PASSWORD</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-dark add-btn col-2 offset-5">LOGIN</button>
                </form>
            </div>
        </div>
    </body>